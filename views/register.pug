html
	head
		title Health Map

		link(type='text/css' rel='stylesheet' href='/css/materialize.min.css' )
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(type='text/css' rel='stylesheet' href='/css/main.css')
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
	body
		main
			nav
				.nav-wrapper
					a.brand-logo(href='/') Find your Doctor
						i(class='fa fa-user-md')
						ul#nav-mobile.right.hide-on-med-and-down
							li
								a(class="modal-trigger" href='#login') Log in
							li
								a(href='/logout') Log out
							li
								a(href='/register') Sign up


			div.container.center-align
				form(method='post' action='/users' onsubmit="return passwordCheck()")

					p Username
					input(type='text', name='inputName' required pattern=".{3,20}" title="Choose a username that contains 3 to 20 characters")

					p E-mail
					input(type='email', name='inputEmail' required)

					p Password
					input#pass1(type='password', name='inputPassword' required pattern=".{8,15}" title="Choose a password that contains 8 to 15 characters")

					p#passCheck Repeat password
					input#pass2(type='password', name='inputPassword2' required pattern=".{8,15}" title="Choose a password that contains 8 to 15 characters")

					br
					br
					input(type='submit' value='submit')

		footer(class='page-footer')
			div(class='container')
				div(class='row')
					div(class='grey-text text-lighten-4') kkjjklsdfjfaskl

//-		a(class="modal-trigger waves-effect waves-light btn" href="#login") Login
		form(method='get' action='/logout')
			button(class="waves-effect waves-light btn") Logout

